container_commands:
  01_build_server:
    command: "npm run build:server || echo 'no server build step'"
  02_build_client:
    command: "npm run build:client:fast || echo 'no client build step'"
  03_permissions:
    command: "chmod -R 755 . || true"
  04_start:
    command: "node server/index.js"
option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: "production"
    PORT: "8080"
