    },
    {
      "src": "/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Staff Portal Dashboard"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Staff Portal"
    }
  ],
  "shortcuts": [
    {
      "name": "Communication Center",
      "short_name": "Calls",
      "description": "Access call history and live communications",
      "url": "/communications",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Sales Pipeline",
      "short_name": "Pipeline",
      "description": "View loan applications and pipeline",
      "url": "/pipeline",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Partner Referrals",
      "short_name": "Referrals",
      "description": "Manage partner referral system",
      "url": "/partner-referrals",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Applications",
      "short_name": "Apps",
      "description": "View and manage loan applications",
      "url": "/applications",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/documents",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/communications?call=%s"
    }
  ],
  "share_target": {
    "action": "/documents/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "document",
          "accept": ["application/pdf", "image/*"]
        }
      ]
    }
  }
}