{
  "version": 2,
  "functions": {
    "api/**/*.mjs": { "runtime": "vercel-node@20.0.0" }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.mjs" },
    { "src": "/(.*)", "dest": "dist/public/index.html" }
  ]
}
