{
  "version": 2,
  "functions": { "api/**/*.mjs": { "runtime": "nodejs20.x" } },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.mjs" },
    { "src": "/(.*)", "dest": "dist/public/index.html" }
  ]
}
