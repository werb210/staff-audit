{
  "name": "Boreal Staff Audit",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/workspaces/staff-audit",
  "postCreateCommand": "if [ -f package.json ]; then npm ci || npm i; else echo 'No package.json found, skipping install'; fi",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-azureaccount",
        "ms-azuretools.vscode-azurestaticwebapps"
      ]
    }
  }
}
