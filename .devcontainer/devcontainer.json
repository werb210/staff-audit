// .devcontainer/devcontainer.json
{
  "name": "Boreal Staff (Node 22 + Azure CLI + psql)",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "remoteUser": "node",

  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/postgres-client:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-azureaccount",
        "ms-azuretools.vscode-azurestaticwebapps"
      ]
    }
  },

  "postCreateCommand": "set -eux; npm ci || npm i; az --version >/dev/null || true; psql --version >/dev/null || true"
}
