{
  "name": "Boreal Staff (Node 22 + Azure CLI + PostgreSQL Client)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22-bullseye",
  "remoteUser": "node",

  "features": {
    "azure-cli": "latest",
    "postgresql-client": "latest",
    "git": "latest"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-azureaccount",
        "ms-azuretools.vscode-azurestaticwebapps"
      ]
    }
  },

  "postCreateCommand": "set -eux; npm ci || npm i; az --version || true; psql --version || true"
}
