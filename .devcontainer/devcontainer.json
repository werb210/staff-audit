{
  "name": "Boreal Staff Audit",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22-bullseye",
  "remoteUser": "node",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-azureaccount",
        "ms-azuretools.vscode-azurestaticwebapps"
      ]
    }
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y postgresql-client azure-cli && npm ci || npm i"
}
