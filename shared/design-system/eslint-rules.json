{
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../components/Sidebar.tsx", "./components/Sidebar.tsx", "**/components/Sidebar.tsx"],
            "message": "Use shared/design-system/layout/Sidebar instead. Legacy component deprecated."
          },
          {
            "group": ["../components/Header.tsx", "./components/Header.tsx", "**/components/Header.tsx"],
            "message": "Use shared/design-system/layout/Header instead. Legacy component deprecated."
          },
          {
            "group": ["../components/ApplicationCard.tsx", "./components/ApplicationCard.tsx", "**/components/ApplicationCard.tsx"],
            "message": "Use shared/design-system/business/ApplicationCard instead. Legacy component deprecated."
          },
          {
            "group": ["../components/ui/*", "./components/ui/*"],
            "message": "Use shared/design-system/ui/* instead. Import from centralized design system."
          },
          {
            "group": ["../pages/Dashboard.tsx", "./pages/Dashboard.tsx", "**/pages/Dashboard.tsx"],
            "message": "Use shared/design-system role-based dashboard instead. Legacy page deprecated."
          }
        ]
      }
    ],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "ImportDeclaration[source.value=/^\\.\\.\\/(components|pages)/]",
        "message": "Import from shared/design-system instead of local components or pages"
      },
      {
        "selector": "ImportDeclaration[source.value=/\\/components\\/(Sidebar|Header|ApplicationCard)/]",
        "message": "Use shared/design-system components instead of legacy implementations"
      }
    ],
    "no-restricted-globals": [
      "error",
      {
        "name": "className",
        "message": "Avoid hardcoded className. Use design system components with semantic variants."
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.ts"],
      "rules": {
        "react/display-name": "off"
      }
    }
  ],
  "settings": {
    "designSystemMigration": {
      "enforceSharedComponents": true,
      "allowLegacyImports": false,
      "migrationDeadline": "2025-07-15"
    }
  }
}