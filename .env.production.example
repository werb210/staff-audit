# Production Environment Configuration Example
# Copy this to .env.production and fill in your actual values

# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# Authentication & Security
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-chars"
SESSION_SECRET="your-super-secure-session-secret-at-least-32-chars"

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_VERIFY_SID="your-twilio-verify-service-sid"

# SendGrid (for email)
SENDGRID_API_KEY="your-sendgrid-api-key"

# Application Settings
NODE_ENV="production"
PORT="5000"
HOST="0.0.0.0"

# Feature Flags (optional)
MARKETING_ENABLED="true"
COMMUNICATIONS_ENABLED="true"
LENDERS_ENABLED="true"
ANALYTICS_ENABLED="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"