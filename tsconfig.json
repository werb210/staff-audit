{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "out",
    "types": ["node"]
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "client/**/*.ts"],
  "exclude": [
    "node_modules",
    "scripts/**",
    "server/_diag/**",
    "legacy/**",
    "tests/**",
    "e2e/**"
  ]
}
