{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx --watch server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.json",
    "start": "node dist/server/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "build:client": "vite build",
    "build:client:fast": "vite build --minify=false --sourcemap=false",
    "deploy": "npm run build && npm run start",
    "typecheck": "tsc",
    "transcripts:once": "node dist/server/workers/transcripts.worker.js",
    "transcripts:watch": "nodemon server/workers/transcripts.worker.mjs",
    "test": "echo \"(no tests)\" && exit 0",
    "clean": "rimraf dist build .vite .cache || true",
    "serve:client": "vite preview --host 0.0.0.0 --port 5173",
    "predeploy": "npm run typecheck && (npm run lint || echo 'no lint script') && echo OK",
    "test:auth:unit": "vitest run tests/auth_cookie_header.spec.ts",
    "test:auth": "npm run -s test:auth:unit",
    "check:dup": "node scripts/dup_guard.mjs",
    "build:strict": "npm run check:dup && npm run build",
    "postbuild:client": "mkdir -p client/dist && cp -r dist/public/* client/dist/",
    "prepare": "node scripts/prepare-husky.cjs",
    "seed:products": "node dist/scripts/sync-products.js",
    "postdeploy": "npm run seed:products && npm run seed:docs || true",
    "seed:docs": "node dist/scripts/seed-required-docs.js",
    "e2e:server": "jest --config=jest.config.cjs",
    "e2e:lender:mock": "node dist/tools/mock-lender.js",
    "e2e:all:staff": "npm-run-all -p e2e:lender:mock e2e:server",
    "codex:audit": "node codex/audit-runner.mjs",
    "codex:functional": "node codex/functional-runner.mjs",
    "codex:v1": "npm run codex:audit && npm run codex:functional"
  },
  "dependencies": {
    "express": "4.21.2"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "tsx": "^4.20.5"
  },
  "engines": {
    "node": "22.x"
  }
}
