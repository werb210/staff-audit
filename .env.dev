# Dev-only role switcher
DEV_AUTH=1

# Admin impersonation settings
HASH_SECRET=your-hash-secret-for-impersonation-cookie-signing

# Production safety
NODE_ENV=development

# ==== Templating ====
TEMPLATE_ENGINE=liquid

# ==== SLA Policies (minutes) ====
SLA_FIRST_RESPONSE_MINUTES=15
SLA_MAX_UNREAD_MINUTES=60

# ==== Automations & Business Hours ====
TIMEZONE=America/Edmonton
BIZ_HOURS_START=09:00
BIZ_HOURS_END=18:00
BIZ_DAYS=1,2,3,4,5
SMS_OPTOUT_KEYWORDS="STOP,STOPALL,UNSUBSCRIBE,QUIT,CANCEL,END"

# Links used in reminders (client portal re-upload etc.)
CLIENT_PORTAL_BASE=https://portal.__your_domain__
# ===== Feature Flags & Experiments =====
FLAGS_DEFAULT_VARIANT=control         # fallback exp variant

# ===== Perf & A11y =====
PERF_HEADERS_ENABLED=true
STATIC_MAX_AGE=31536000             # 1 year for hashed assets
VITE_WEB_VITALS=true                # enable client web-vitals
VITE_A11Y_DEV=true                  # dev-only axe checks (no effect in prod)

# ===== Billing / Usage =====
BILLING_ENABLED=true
BILLING_DEFAULT_PLAN=team             # default plan key for the global subscription
BILLING_ALERT_THRESHOLDS=0.8,1.0      # 80% and 100% Slack alerts

# ===== Release Management =====
APP_VERSION=0.0.0

# ===== Queues (BullMQ) =====
REDIS_URL=
QUEUES_ENABLED=true
QUEUE_NAMES=ocr,sms,emails,webhooks,reports,engine

# ===== UI shell =====
UI_BRAND=Boreal Financial Staff
DEV_LOGIN_ENABLED=true
VITE_UI_BRAND=Boreal Financial Staff
