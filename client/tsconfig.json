{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": "src",
    "paths": { 
      "@/*": ["*"],
      "react-router-dom": ["router/shim-react-router-dom.tsx"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules", "scripts", "**/*.spec.ts", "**/*.spec.tsx"]
}