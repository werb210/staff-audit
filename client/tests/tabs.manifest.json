{
  "basePath": "/staff",
  "silos": ["BF", "SLF"],
  "tabs": [
    {
      "name": "Dashboard",
      "route": "/staff/dashboard",
      "features": [
        {
          "name": "Dashboard loads with KPIs",
          "action": "assert-visible",
          "selector": "[data-testid='dashboard-kpis'], .grid:has(h3)"
        },
        {
          "name": "Activity feed displays",
          "action": "assert-visible", 
          "selector": "[data-testid='activity-feed'], .space-y-4:has(h3:text('Recent Activity'))"
        },
        {
          "name": "Quick actions available",
          "action": "assert-visible",
          "selector": "button:has-text('New Application'), a:has-text('New Application')"
        }
      ]
    },
    {
      "name": "Pipeline",
      "route": "/staff/pipeline",
      "features": [
        {
          "name": "Pipeline board loads",
          "action": "assert-visible",
          "selector": "[data-testid='pipeline-board'], .flex:has(.space-y-4)"
        },
        {
          "name": "Application cards display",
          "action": "assert-visible",
          "selector": "[data-testid='application-card'], .bg-white.border.rounded-lg"
        },
        {
          "name": "Stage columns visible",
          "action": "assert-visible",
          "selector": ".space-y-4:has(h3), .flex-col:has(h3)"
        }
      ]
    },
    {
      "name": "Contacts",
      "route": "/staff/contacts", 
      "features": [
        {
          "name": "Contacts table loads",
          "action": "assert-visible",
          "selector": "[data-testid='contacts-table'], table, .space-y-2:has(.grid)"
        },
        {
          "name": "Search functionality present",
          "action": "assert-visible",
          "selector": "input[placeholder*='Search'], input[type='search']"
        },
        {
          "name": "Contact data displays",
          "action": "assert-visible",
          "selector": "td, .grid:has(.font-medium)"
        }
      ]
    },
    {
      "name": "Tasks & Calendar", 
      "route": "/staff/tasks-calendar",
      "features": [
        {
          "name": "FullCalendar component loads",
          "action": "assert-visible",
          "selector": ".fc, .fc-toolbar, [class*='fullcalendar']"
        },
        {
          "name": "Calendar navigation controls",
          "action": "assert-visible", 
          "selector": ".fc-toolbar-chunk, .fc-button-group"
        },
        {
          "name": "New Task button available",
          "action": "assert-visible",
          "selector": "button:has-text('New Task')"
        },
        {
          "name": "New Appointment button available", 
          "action": "assert-visible",
          "selector": "button:has-text('New Appointment')"
        },
        {
          "name": "Task summary section displays",
          "action": "assert-visible",
          "selector": "[data-testid='task-summary'], .bg-white:has(h2:text('Task Summary'))"
        }
      ]
    },
    {
      "name": "Lenders",
      "route": "/staff/lenders",
      "features": [
        {
          "name": "Lenders list loads",
          "action": "assert-visible",
          "selector": "[data-testid='lenders-list'], .space-y-4:has(.bg-white)"
        },
        {
          "name": "Lender products display",
          "action": "assert-visible", 
          "selector": "[data-testid='product-list'], .grid:has(.border)"
        },
        {
          "name": "Filter controls available",
          "action": "assert-visible",
          "selector": "select, [data-testid='filter'], .flex:has(select)"
        }
      ]
    },
    {
      "name": "Communications",
      "route": "/staff/communication",
      "features": [
        {
          "name": "Communication tabs load",
          "action": "assert-visible",
          "selector": "[data-testid='comm-tabs'], .border-b:has(button)"
        },
        {
          "name": "Messages section displays",
          "action": "assert-visible",
          "selector": "[data-testid='messages'], .space-y-4:has(.bg-white)"
        },
        {
          "name": "Communication controls available",
          "action": "assert-visible",
          "selector": "button:has-text('New'), button:has-text('Send')"
        }
      ]
    },
    {
      "name": "Reports", 
      "route": "/staff/reports",
      "features": [
        {
          "name": "Reports dashboard loads",
          "action": "assert-visible",
          "selector": "[data-testid='reports-dashboard'], .grid:has(.bg-white)"
        },
        {
          "name": "Summary metrics display",
          "action": "assert-visible",
          "selector": "[data-testid='summary-metrics'], .grid:has(.text-2xl)"
        },
        {
          "name": "Charts section present",
          "action": "assert-visible", 
          "selector": "[data-testid='charts'], .bg-white:has(.h-64)"
        }
      ]
    },
    {
      "name": "Settings",
      "route": "/staff/settings", 
      "features": [
        {
          "name": "Settings navigation loads",
          "action": "assert-visible",
          "selector": "[data-testid='settings-nav'], .space-y-2:has(button)"
        },
        {
          "name": "Settings content displays",
          "action": "assert-visible",
          "selector": "[data-testid='settings-content'], .bg-white:has(.space-y-6)"
        },
        {
          "name": "Save controls available",
          "action": "assert-visible",
          "selector": "button:has-text('Save')"
        }
      ]
    }
  ]
}